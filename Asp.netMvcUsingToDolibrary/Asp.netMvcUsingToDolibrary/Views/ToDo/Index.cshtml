@model IEnumerable<Asp.netMvcUsingToDolibrary.Models.ToDo>

@{
    ViewBag.Title = "Index ";
}

<h2>Your ToDo</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Discretion)
        </th>
